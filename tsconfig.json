{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "app/(dashboard)/(routes)/dashboard/page.ts",
    "components/alan-ai.jsx",
    "app/(dashboard)/(routes)/dashboard/components/alan-ai.ts",
    "app/(dashboard)/(routes)/dashboard/components/calendar-days.tsx",
    "app/(dashboard)/(routes)/dashboard/components/event-modal.tsx",
    "app/(dashboard)/(routes)/dashboard/components/event-labels.tsx",
    "app/(dashboard)/(routes)/dashboard/components/calendar-months.tsx"
  ],
  "exclude": ["node_modules"]
}
